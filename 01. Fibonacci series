#include <stdio.h>

int fib(int n) {
    if (n == 0) {
        return 0;
    } else if (n == 1) {
        return 1;
    } else {
        return fib(n - 1) + fib(n - 2);
    }
}
int main() {
    int num;
    printf("Sai Suryha (192210685)\n");
    printf("Enter a positive number: ");
    scanf("%d", &num);

    if (num <= 0) {
        printf("Please enter a positive number.\n");
        return 1;
    }
    printf("Fibonacci Series is: ");
    for (int i = 0; i < num; i++) {
        printf("%d", fib(i));
        if (i < num - 1) {
            printf(", ");
        }
    }
    printf("\n");
    return 0;
}
