#include <stdio.h>
int main() {
	int n;
	printf("sai suryha (192210685)\n");
	printf("Enter the no of element in an array:");
	scanf("%d",&n);
	int arr[n];
	printf("Enter the array element:");
	for (int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
   int i, j, position, swap;
   for (i = 0; i < (n - 1); i++) {
      position = i;
      for (j = i + 1; j < n; j++) {
         if (arr[position] > arr[j])
            position = j;
      }
      if (position != i) {
         swap = arr[i];
         arr[i] = arr[position];
         arr[position] = swap;
      }
   }
   for (i = 0; i < n; i++)
      printf("%d ", arr[i]);
   return 0;
}
